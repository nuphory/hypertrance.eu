	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch dev server",
			"request": "launch",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["dev"],
			"type": "node",
			"serverReadyAction": {
				"action": "debugWithChrome",
				"pattern": "Local: http://localhost:([0-9]+)",
				"uriFormat": "http://localhost:%s"
			}
		}
	]
}
